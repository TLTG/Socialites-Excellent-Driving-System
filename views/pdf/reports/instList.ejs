<html>
    <head>
        <meta charset="UTF-8">
        <style>
            .tblRecSched{
                border: black;
                border-collapse: collapse;
            }
            table, th, td {
                border: 1px solid black;
            }
            .tblRecSched td{
                color: black;
                font-size: 11px;
                padding: 5px;
            }
            .tblRecSched thead{
                text-transform: uppercase;
                background-color: #5D0000;
                font-size: 13px;
            }
            .tblRecSched th{
                color: white;
            }
            #pageHeader{
                text-align:center;
                padding-bottom: 0px;            
            }
        </style>
    </head>
    <body style="padding-left: 30px; padding-right: 30px; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
        <center>
             <div id="pageHeader">
                <h1 style="line-height: 5px">SOCIALITES EXCELLENT DRIVING</h1>
                <h5>Mayon Street Corner, Maria Clara, Quezon City<br>
                    Andre Salangsang - Prop. * VAT Reg. TIN: 111-222-333-444<br>
                    Tels.: 741-7185/745-2962
                </h5><hr>
            </div>
            <h4 style="text-transform: uppercase;">INSTRUCTORS: LIST/PROFILE<br>SED - Quezon City | September 12, 2018</h4><br>
            <table class="table tblRecSched" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Sex</th>
                        <th>Contact #</th>
                        <th>Email</th>
                        <th>License No.</th>
                        <th>Date Hired</th>
                        <th>Date Resigned</th>
                        <th>Assigned Vehicle</th>
                    </tr>
                </thead>
                <tbody>
                <%
                    var html = "";
                    data.forEach((e,i)=>{
                        html += "<tr>";
                        html += "<td>"+ e.instID +"</td>";
                        html += "<td>"+ e.fullname.replace(/_/g," ") +"</td>";
                        html += "<td>"+ e.sex +"</td>";
                        html += "<td>"+ e.telno +"</td>";
                        html += "<td>"+ e.email +"</td>";
                        html += "<td>"+ e.license +"</td>";
                        html += "<td>"+ e.dateRegistered +"</td>";
                        html += "<td>"+ e.dateRetired +"</td>";
                        html += "<td>"+ (e.car || "none") +"</td>";
                        html += "</tr>";
                    });
                %>
                <%-html%>
                </tbody>
            </table><br>
        </center>
        <div style="width: 100%; align-items: right;">
            <h5 style="text-transform: uppercase; text-align: right">Total Number of Instructors: <%=data.length%></h5>
        </div>
        <div id="pageFooter"></div>
    </body>
</html>
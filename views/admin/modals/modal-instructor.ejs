<!-- New Instructor Modal -->
<div class="modal fade" id="newInstructor" tabindex="-1" role="dialog" aria-labelledby="newInstructor" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel"><strong>ADD</strong> New Instructor</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <h5>Fill out all required (<span class="asterisk">*</span>)fields.</h5><hr>
        <form>
            <div class="table-responsive">
                <table class="table customtbl">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td width="30%"><label class="control-label customLbl pull-right" for="newInstFirstname">First Name: <span class="asterisk">*</span></label></td>
                            <td><input type="text" class="customTxtInput pull-left" id="newInstFirstname" class="form-control" placeholder="Juan"></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstMidname">Middle Name: </label></td>
                            <td><input type="text" class="customTxtInput pull-left" id="newInstMidname" class="form-control" placeholder="Santos"></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstSurname">Surname: <span class="asterisk">*</span></label></td>
                            <td><input type="text" class="customTxtInput pull-left" id="newInstSurname" class="form-control" placeholder="Dela Cruz"></td>
                        </tr>
                        <tr>
                            <td width="30%"><label class="control-label customLbl pull-right" for="newInstGender">Sex: <span class="asterisk">*</span></label></td>
                            <td class="pull-left"><label><input type="radio" class="flat" checked name="newInstGender" value="M"> Male</label>
                                &nbsp;&nbsp;&nbsp;&nbsp;<label><input type="radio" class="flat" name="newInstGender" value="F"> Female</label></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstBday">Date of Birth: <span class="asterisk">*</span></label></td>
                            <td><input type="date" class="form-control customTxtInput pull-left" id="newInstBday" placeholder="dd/mm/yyyy"></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstAddress">Address: <span class="asterisk">*</span></label></td>
                            <td><input type="text" class="customTxtInput pull-left" id="newInstAddress" class="form-control" placeholder="Blk 43 Lot 1, Novaliches, Quezon City"></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstPhone">Phone Number: <span class="asterisk">*</span></label></td>
                            <td><input type="text" class="customTxtInput pull-left" id="newInstPhone" class="form-control" placeholder="09123456789"></td>
                        </tr>
                        <tr>
                            <td><label class="control-label customLbl pull-right" for="newInstEmail">Email Address: <span class="asterisk">*</span></label></td>
                            <td><input type="email" class="customTxtInput pull-left" id="newInstEmail" class="form-control" placeholder="juansdcruz@gmail.com"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="btnConfAddInstr" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" id="btnCancAddInstr" class="btn btn-primary">Add Instructor</button>
      </div>
    </div>
  </div>
</div>
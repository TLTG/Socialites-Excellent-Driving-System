<div class="view-requirement">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Enrollment Requirements</h3> 
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="dashboard()">Home</a></li>
                <li class="breadcrumb-item active"><a>Enrollment Requirements</a></li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start of Card  -->
        <div class="studentCard">
            <div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="input-group input-group-flat">
                                <span class="input-group-btn"><button class="btn btn-custom" type="submit"><i class="ti-search"></i></button></span>
                                <input type="text" id="searchReq" class="form-control" placeholder="Search..." style="font-size: 12px;">
                                <span class="input-group-btn"><button class="btn btn-primary input-group-close-icon" onclick="clrSearchReq()" type="button"><i class="ti-close"></i></button></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                        <div class="pull-right">
                            <button type="button" id="btnNewBranch" onclick="addReqClass()" class="btn btn-success m-b-10 m-l-5">New Requirement Class</button>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                        <hr class="hrCustom">
                        <div class="card reqCard">
                            <h3>Requirement Classification</h3>
                            <div class="table-responsive">
                                <table class="table tblReqClass table-hover">
                                    <thead>
                                        <th></th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>17-18 years old</td>
                                        </tr>
                                        <tr>
                                            <td>19 years old and above</td>
                                        </tr>
                                        <tr>
                                            <td>Non-Filipino students &amp; tourists</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <hr class="hrCustom">
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                        <hr class="hrCustom">
                        <div class="card reqCard">
                            <h3>List of Requirements</h3><hr>
                            <div style="padding-left: 30px;">
                                <div class="row">
                                    <div class="col-md-8 col-lg-8 col-sm-7 col-xs-7">
                                        <h4 class="selectedReqClass">17-18 yrs. old</h4>
                                        <input type="text" class="txtEnr" required name="editSelReqClass" id="editSelReqClass">
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-sm-1 col-xs-1">
                                        <i class="ti-plus tiV" id="btnAddClReq" onclick="addClReq()" data-toggle="tooltip" data-placement="bottom" title="Update"></i>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-sm-1 col-xs-1">
                                        <i class="ti-pencil tiV" id="btnEditClReq" onclick="editClReq()" data-toggle="tooltip" data-placement="bottom" title="Update"></i>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-sm-1 col-xs-1">
                                        <i class="ti-close tiV" id="btnDelClReq" onclick="delClReq()" data-toggle="tooltip" data-placement="bottom" title="Remove"></i>
                                    </div>
                                </div><hr>
                                <div class="table-responsive">
                                    <table class="table tblReqPerClass">
                                        <thead>
                                            <tr>
                                                <th width="75%">Requirement</th>
                                                <th class="hideTh" width="25%">Action</th>
                                            </tr> 
                                        </thead>
                                        <tbody id="carDefect">
                                            <tr>
                                                <td class="tblReqEditable">Original Birth Certificate (NSO)</td>
                                                <td>
                                                    <i class="ti-close tiDef2 btnDelReq" onclick="delReq()" data-toggle="tooltip" data-placement="bottom" title="Remove"></i>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="tblReqEditable">Photocopy of Birth Certificate (NSO)</td>
                                                <td>
                                                    <i class="ti-close tiDef2 btnDelReq" onclick="delReq()" data-toggle="tooltip" data-placement="bottom" title="Remove"></i>
                                                </td>                                        
                                            </tr>
                                            <tr>
                                                <td class="tblReqEditable">Parental Consent</td>
                                                <td>
                                                    <i class="ti-close tiDef2 btnDelReq" onclick="delReq()" data-toggle="tooltip" data-placement="bottom" title="Remove"></i>
                                                </td>          
                                            </tr>
                                        </tbody>
                                    </table>
                                </div><hr>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6">
                                    <button type="button" id="btnCancEditReq" onclick="cancEditReq()" class="pull-right btn btn-light m-b-10 m-l-5">Cancel</button>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6">
                                    <button type="button" id="btnSaveEditReq" onclick="saveEditReq()" class="pull-right btn btn-primary m-b-10 m-l-5">Save</button>
                                </div>
                            </div>
                        </div>
                        <hr class="hrCustom">
                    </div>
                </div>
            </div>
        </div><!-- End of Card  -->
    </div>
    <!-- End Container fluid  -->
</div>

<!-- Add Requirement Class Modal -->
<div class="modal fade" id="addReqClassModal" tabindex="-1" role="dialog" aria-labelledby="addReqClassModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="reqModalTitle"><strong>ADD</strong> Requirement Class</h4>
        <h4 class="modal-title" id="reqModalTitle2"><strong>ADD</strong> Requirement</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="divReq1">
            <h5 class="h5Enr">Requirement Class Name:<span class="asterisk">*</span></h5>
            <textarea rows="3" class="enrTxtArea" id="newReqClsName"></textarea>
            <small style="padding-left: 10px;">(Maximum of 50 characters)</small>
        <hr></div>
        <div class="divReq2">
            <h5 class="h5Enr">Requirement Name:<span class="asterisk">*</span></h5>
            <input type="text" class="txtEnr" required name="newReqName" id="newReqName">
            <small style="padding-left: 10px;">(Maximum of 50 characters)</small>
        <hr></div>
      </div>
      <div class="modal-footer">
        <button type="button" id="btnCancConfARC" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" id="btnConfARC" onclick="confAddReqCls()" class="btn btn-primary">Add</button>
        <button type="button" id="btnConfAR" onclick="confAddReq()" class="btn btn-primary">Add</button>
      </div>
    </div>
  </div>
</div>
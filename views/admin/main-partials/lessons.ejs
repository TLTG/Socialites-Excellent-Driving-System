<!-- Add Lesson Modal -->
<div class="modal fade" id="addLessonModal" tabindex="-1" role="dialog" aria-labelledby="addLessonModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <center>
            <h2 class="h6AddLesson"></h2>
            <h6>Fill out all required (<span class="asterisk">*</span>) fields.</h6>
        </center>
        <hr class="hrCustom"><br>
        <div>
            <form class="formAddBranch">
                <div>
                    <h5 class="h5Enr">Lesson Name<span class="asterisk">*</span></h5>
                    <input type="text" class="txtEnr" required name="newLesName" id="newLesName" placeholder="Lesson Name"><br>
                </div><hr>
                <div>
                    <h5 class="h5Enr">Description</h5>
                    <textarea rows="3" class="enrTxtArea" id="newLesDesc"></textarea>                
                </div><hr>
                <div>
                    <h5 class="h5Enr">Prerequisite Lesson<span class="asterisk">*</span></h5>
                    <select required class="enrCivStatus" name="newLesPrereq" id="newLesPrereq">
                        <option value="0">---</option>
                        <option value="1">Start &amp; Stop</option>
                        <option value="2">Eme eme</option>
                        <option value="3">Emeeeeee</option>
                        <option value="4">Whaaat</option>
                        <option value="5">Ganda langs</option>
                    </select>
                </div><hr>
            </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="btnCancAddLesson" onclick="confCancAddLesson()" class="btn btn-danger">Cancel</button>
        <button type="button" id="btnConfAddLesson" onclick="confAddLesson()" class="btn btn-success">Add</button>
        <button type="button" id="btnConfResetLesson" onclick="confResetLesson()" class="btn btn-light">Reset</button>
        <button type="button" id="btnConfEditLesson" onclick="confEditLesson()" class="btn btn-success">Save</button>
      </div>
    </div>
  </div>
</div>